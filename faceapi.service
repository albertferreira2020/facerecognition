[Unit]
Description=Face Recognition API
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/path/to/facerecognition
Environment=PATH=/path/to/facerecognition/venv_linux/bin
ExecStart=/path/to/facerecognition/venv_linux/bin/gunicorn -w 4 -b 0.0.0.0:5001 app:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
